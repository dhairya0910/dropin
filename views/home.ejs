<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>dropIn</title>
</head>
<body>
       <!-- Including Flash mesages temporarily  -->
       <% if (success && success.length>0) { %>
        <div>
    <p><%= success %></p>
  </div>
<% } %>
<% if (error && error.length>0) { %>
        <div>
    <p><%= error %></p>
  </div>
<% } %>
    <a href="/user/login"><button>Login Here    </button></a>
     <a href="/user/signup"><button>Signup here!</button></a>
    <a href="/task/addnew"><button>Add new Task</button></a>
    <a href="/user/logout"><button>Logout Here    </button></a>
    <ul>
        <% let cout=0 %>
       <% tasks.forEach(task => { %>
              <%  cout+=1; %>
            <p> Task #<%=cout%> </p>
            <li><%= task.title %></li>
            <li><%= task.description %></li>
            <li><%= task.priority %></li>
           <a href="/task/<%=task._id%>"><button>Show</button></a>
            <a href="/task/<%=task._id%>/edit"><button>Edit</button></a>
             <a href="/task/<%=task._id%>/delete"><button>Delete</button></a>
        <% }); %>
    </ul>
</body>
</html>