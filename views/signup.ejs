<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>User Signup</title>
</head>
<body>
    <!-- Including Flash mesages temporarily  -->
       <% if (success && success.length>0) { %>
        <div>
    <p><%= success %></p>
  </div>
<% } %>
<% if (error && error.length>0) { %>
        <div>
    <p><%= error %></p>
  </div>
<% } %>
  <h1>Signup Form</h1>
  <form action="/user/signup" method="POST">
    
    <label for="userName">User Name:</label><br>
    <input type="text" id="userName" name="username" placeholder="unique User" required><br><br>

    <label for="email">Email:</label><br>
    <input type="email" id="email" name="email" placeholder="test@test.com" required><br><br>
    

    <label for="password">Password:</label><br>
    <input type="password" id="password" name="password" required><br><br>

    <button type="submit">Sign Up</button>
  </form>
</body>
</html>
